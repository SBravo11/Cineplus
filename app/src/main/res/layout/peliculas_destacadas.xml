<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/scale_8">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPelicula"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="@dimen/scale_16"
            android:contentDescription="@string/card_placeholder_text"
            app:srcCompat="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitlePeliculaCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/scale_12"
            android:layout_marginEnd="@dimen/scale_12"
            android:text="@string/card_title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPeliculaResumenCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/scale_16"
            android:layout_marginTop="@dimen/scale_8"
            android:layout_marginEnd="@dimen/scale_16"
            android:layout_marginBottom="@dimen/scale_8"
            android:text="@string/card_resumen"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHora1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:text="@string/card_hora" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHora2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:padding="6dp"
                android:text="@string/card_hora" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>