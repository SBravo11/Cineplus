<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pelicula_butaca">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_titulo_butacas"
        app:layout_constraintStart_toEndOf="@id/btn_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/scale_16"
        android:text="@string/txt_titulo_butaca"
        android:textSize="@dimen/text_title_header"
        android:textStyle="bold"
        />

    <ImageButton
        android:id="@+id/btn_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/descripcion_btn_volver"
        android:padding="15dp"
        android:layout_marginStart="@dimen/scale_16"
        android:layout_marginTop="@dimen/scale_16"
        android:src="@drawable/arrow_left"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/txt_titulo_butacas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_titulo_pelicula_butacas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_pelicula_placeholder"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo_butacas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/scale_16"
        android:textSize="@dimen/text_subtitle"
        android:textStyle="bold"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ver_detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_ver_detalle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_titulo_pelicula_butacas"
        app:layout_constraintTop_toBottomOf="@+id/btn_volver" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ver_detalle"
        app:layout_constraintBottom_toTopOf="@id/lista_asientos_pelicula_butacas"
        android:padding="@dimen/scale_16">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/seat" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ticket_confirmation"
            android:alpha="0.5"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wallet"
            android:alpha="0.5"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continuar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_continuar"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_asientos_pelicula_butacas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_continuar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>